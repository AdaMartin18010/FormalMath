  λ g, trace (ρ.homomorphism g)

-- 特征标正交关系
theorem CharacterOrthogonality (G : FiniteGroup) (χ₁ χ₂ : Character G) :
  (1 / |G|) * ∑ g : G, χ₁ g * conj (χ₂ g) = if χ₁ = χ₂ then 1 else 0

